{
  "name": "social-manager-desktop",
  "version": "1.0.0",
  "description": "Social Manager Desktop App by Priyanshu",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-server\" \"npm run start-client\" \"wait-on http://localhost:3000 && electron .\"",
    "start-server": "cd ../server && npm start",
    "start-client": "cd ../client && npm start",
    "build": "npm run build-client && npm run build-electron",
    "build-client": "cd ../client && npm run build",
    "build-electron": "electron-builder",
    "package": "npm run build && electron-builder --publish=never",
    "package-win": "npm run build && electron-builder --win --publish=never",
    "package-mac": "npm run build && electron-builder --mac --publish=never",
    "package-linux": "npm run build && electron-builder --linux --publish=never",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "npm run build && electron-builder --publish=always"
  },
  "keywords": [
    "social-media",
    "management",
    "desktop",
    "electron",
    "ai",
    "analytics"
  ],
  "author": {
    "name": "Priyanshu",
    "email": "priyanshu@socialmanager.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.1",
    "electron-devtools-installer": "^3.2.0",
    "node-notifier": "^10.0.1",
    "auto-launch": "^5.0.5",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "appId": "com.socialmanager.desktop",
    "productName": "Social Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "../client/build/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../client/build",
        "to": "app/build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "SocialManager-${version}-${arch}.${ext}",
      "publisherName": "Priyanshu"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Social Manager",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "SocialManager-${version}-portable.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "publish": {
      "provider": "github",
      "owner": "priyanshu",
      "repo": "social-manager"
    }
  }
} 